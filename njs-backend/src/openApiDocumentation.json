                                }
                            }
                        }
                    }
                }
            }
        },
        "/rest/attributegroups/NotInItemType/{id}": {
            "get": {
                "description": "Return all attribute group objects that do not belong to the given item type as an array",
                "parameters": [{
                    "name": "id",
                    "in": "path",
                    "description": "Id of the item type",
                    "required": true,
                    "schema": { 
                        "type": "string"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"array",
                                    "items": {
                                        "$ref": "#/components/schemas/attributeGroup"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "invalid username or password",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/error"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "object not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/error"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "security": [
        {
            "bearerAuth": [],
            "ntlm": []
        }
    ],
    "components": {
        "schemas": {
            "error": {
                "description": "An error object that enumerates all validation errors",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "message": {
                        "type": "string",
                        "description": "Main error message"
                    },
                    "data": {
                        "type": "object",
                        "description": "Detailed errors",
                        "properties": {
                            "errors": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "value": {
                                            "type": "string"
                                        },
                                        "msg": {
                                            "type": "string"
                                        },
                                        "param": {
                                            "type": "string"
                                        },
                                        "location": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        },
                        "additionalProperties": false
                    }
                }
            },
            "attributeGroup": {
                "description": "An attribute group object that handles multiple attribute types.",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string",
                        "maxLength": 10,
                        "description": "Unique id of the attribute group",
                    },
                    "name": {
                        "type": "string",
                        "maxLength": 255,
                        "description": "Unique name of the attribute group",
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            },
            "ntlm": {
                "type": "http",
                "scheme": "negotiate"
            }
        }
    }
}